<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="512dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="94dp">

            <TextView
                android:id="@+id/operationTextView"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="13dp"
                android:autoText="true"
                android:freezesText="false"
                android:gravity="right|center_vertical"
                android:minWidth="100dp"
                android:scrollbars="horizontal"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_alignEnd="@+id/operationTextView"
                android:layout_alignParentBottom="true"
                android:gravity="right|center_vertical"
                android:minWidth="100dp"
                android:scrollHorizontally="true"
                android:scrollbars="horizontal"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="30sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="419dp"
            android:layout_height="418dp"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/acButton"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="allClean"
                    android:soundEffectsEnabled="true"
                    android:text="AC"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/digit1Button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:inputType="none"
                    android:onClick="assignOperand"
                    android:tag="1"
                    android:text="1" />

                <Button
                    android:id="@+id/digit4Button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperand"
                    android:tag="4"
                    android:text="4" />

                <Button
                    android:id="@+id/digit7Button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperand"
                    android:tag="7"
                    android:text="7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/undoButton"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="undo"
                    android:text="undo" />

                <Button
                    android:id="@+id/digit2Button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperand"
                    android:tag="2"
                    android:text="2" />

                <Button
                    android:id="@+id/digit5Button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperand"
                    android:tag="5"
                    android:text="5" />

                <Button
                    android:id="@+id/digit8Button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperand"
                    android:tag="8"
                    android:text="8" />

                <Button
                    android:id="@+id/digit0Button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperand"
                    android:tag="0"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/powerButton"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperator"
                    android:tag="^"
                    android:text="^" />

                <Button
                    android:id="@+id/digit3Button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperand"
                    android:tag="3"
                    android:text="3" />

                <Button
                    android:id="@+id/digit6Button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperand"
                    android:tag="6"
                    android:text="6" />

                <Button
                    android:id="@+id/digit9Button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperand"
                    android:tag="9"
                    android:text="9" />

                <Button
                    android:id="@+id/pointButton"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperand"
                    android:tag="."
                    android:text="." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/divideButton"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperator"
                    android:tag="/"
                    android:text="/" />

                <Button
                    android:id="@+id/multiButton"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperator"
                    android:tag="*"
                    android:text="*" />

                <Button
                    android:id="@+id/minusButton"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperator"
                    android:tag="-"
                    android:text="-" />

                <Button
                    android:id="@+id/plusButton"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="assignOperator"
                    android:tag="+"
                    android:text="+" />

                <Button
                    android:id="@+id/assignButton"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="showResult"
                    android:text="=" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>